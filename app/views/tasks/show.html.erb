<div class="container">
<h1><%= @task.title %></h1>
<p class="mt-1"><%= @task.details %></p>
 <p class="mt-1">
<% if @task.completed == true %>
<i class="fa-solid fa-square-check"></i> This task is completed!
<% else %>
<i class="fa-regular fa-square"></i> Not completed yet...
<% end %>
</p>
  <%= link_to tasks_path, class:'text-decoration-none text-blue', class: 'btn btn-dark' do %>
  <i class="fa-solid fa-arrow-left"></i> Back
  <% end %>
  <%= link_to edit_task_path, class:'text-decoration-none text-blue', class: 'btn btn-warning' do %>
    <i class="fa-solid fa-pencil"></i> Edit
  <% end %>
  <%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger' do %>
    <i class="fa-solid fa-trash"></i> Delete
  <% end %>
</div>
